<?xml version="1.0" encoding="utf-8" ?>
<phpdox xmlns="http://xml.phpdox.net/config">
  <project name="hive/config" source="${basedir}/../source" workdir="${basedir}/../documents/xml/phpdox">
    <collector backend="parser">
      <!--<exclude mask="**vendors**”/>-->
      <!--<exclude mask="**features**"/>-->
    </collector>
    <generator output="${basedir}/../Documents">
        <enrich base="${basedir}">
            <source type="build" />
            <source type="git">
                <history enabled="true" limit="25" />
            </source>
            <!--<source type="checkstyle" />-->
            <!-- alternative checkstyler to support phpcs xml output -->
            <source type="phpcs" />
            <source type="pmd">
                <file name="../documents/xml/phpmd.xml" />
            </source>
            <source type="phploc">
                <file name="../documents/xml/phploc.xml" />
            </source>
            <source type="phpunit">
                <coverage path="../documents/xml/coverage" />
            </source>
        </enrich>
      <build engine="html" output="html/phpdox"/>
    </generator>
  </project>
</phpdox>
